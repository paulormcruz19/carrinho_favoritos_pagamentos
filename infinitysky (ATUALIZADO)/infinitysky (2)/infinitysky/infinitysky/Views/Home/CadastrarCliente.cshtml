@model infinitysky.Models.Cliente;

@{
    ViewData["Title"] = "CadastrarCliente";
}




<link rel="stylesheet" href="~/css/estilocadastro.css" asp-append-version="true">


<h1>CADASTRE-SE</h1>
<p>Escolha viajar com a melhor agência de intercâmbio do país</p>

<br />

<!-- Layout principal com duas colunas: uma para o formulário e outra para a imagem -->
<div class="container">
    <div class="form-container">
        <!-- Coluna do formulário -->
        <div class="form-content">
            <form asp-action="CadastrarCliente">
                <!-- Resumo de validação para exibir mensagens de erro -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Campo Nome e Telefone -->
                <div class="form-inline">
                    <input asp-for="Nome" class="form-control form-inline-input" placeholder="Nome" />
                    <input asp-for="Telefone" class="form-control form-inline-input" placeholder="Telefone" />
                </div>
                <span asp-validation-for="Nome" class="text-danger"></span>
                <span asp-validation-for="Telefone" class="text-danger"></span>

                <!-- Campo Data de Nascimento -->
                <input asp-for="Data_Nascimento" class="form-control" placeholder="Data de Nascimento" />
                <span asp-validation-for="Data_Nascimento" class="text-danger"></span>

                <!-- Campo Data de Nascimento -->
                <input asp-for="Cpf_Cliente" class="form-control" placeholder="CPF" />
                <span asp-validation-for="Cpf_Cliente" class="text-danger"></span>

                <!-- Campo Email -->
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <!-- Campo Senha -->
                <input asp-for="Senha" type="password" class="form-control" placeholder="Senha" />
                <span asp-validation-for="Senha" class="text-danger"></span>

                <!-- Botão de submissão -->
                <input type="submit" value="CADASTRAR-SE" class="btn btn-primary btn-block" />
            </form>
        </div>

        <!-- imagem que vai aparecer no form-->

        <img class="aviao" src="/img/asa.jpg" class="img-form" alt="Imagem de avião" />

    </div>
</div>












