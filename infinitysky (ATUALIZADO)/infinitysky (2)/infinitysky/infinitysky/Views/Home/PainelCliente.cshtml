@{
    ViewData["Title"] = "Painel Cliente";
}
<link rel="stylesheet" href="~/css/estiloPainelcss.css" asp-append-version="true">

<div class=" titulo">
    <h1>Olá Marina!</h1>
    <p>Seu Intercâmbio, do Céu ao Infinito.</p>

</div>

<div class="container">
    <div class="form-container">
        <!-- Imagem que vai aparecer no perfil -->
        <img class="user" src="/img/usuario.png" alt="Imagem de user" />
        <div class="button">
            <input type="submit" value="Dados" class="btn btn-primary" />
        </div>
        <div class="form-inline">
            <div class="form-anline">
                <button class="btn-primary">
                    <img src="/img/carrinho.png" alt="Ícone de Carrinho" class="btn-icon" />
                    CARRINHO
                </button>
                <button class="btn-primary">
                    <img src="/img/informacoes.png" alt="Ícone de Informações" class="btn-icon" />
                    COMPRAS
                </button>
            </div>
            <div class="form-anline">
                <button class="btn-primary">
                    <img src="/img/favoritos.png" alt="Ícone de Favoritos" class="btn-icon" />
                    FAVORITOS
                </button>
                <button class="btn-primary">
                    <img src="/img/sair.png" alt="Ícone de Sair" class="btn-icon" />
                    SAIR
                </button>
            </div>
        </div>
    </div>
</div>